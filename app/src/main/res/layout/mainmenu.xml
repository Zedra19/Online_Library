<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/bg_homepage"
        android:layout_width="402dp"
        android:layout_height="855dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_homepage" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="299dp"
        android:layout_height="293dp"
        android:layout_marginBottom="396dp"
        android:src="@drawable/onlib"
        app:layout_constraintBottom_toBottomOf="@+id/bg_homepage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_mulai"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/button_signup"
        android:gravity="center_horizontal|center"
        android:text="@string/mulai"
        android:textAppearance="@style/poppins"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>